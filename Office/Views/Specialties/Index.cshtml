@{
  Layout = "_Layout";
}

@using Office.Models

<h1>Specialty List</h1>
<hr />

@if (@Model.Count == 0)
{
  <h4>No Specialty have been added yet!</h4>
  <hr />
}
else
{
<ul>
  <h4>Click on Specialty below to see details</h4>
  @foreach (Specialty specialty in Model)
  {
    <li>@Html.ActionLink($"{specialty.Name}", "Details", new { id = specialty.SpecialtyId })</li>
  }
</ul>
<hr />
<h5 class="pageLink">@Html.ActionLink("Add Doctor", "Create", "Doctors")</h5>
<h5 class="pageLink">@Html.ActionLink("Add Patient", "Create", "Patients")</h5>
}

<h5 class="pageLink">@Html.ActionLink("Add Specialty", "Create", new {@class = "indexLink"})</h5>

<h5 class="pageLink" class="pageLink">@Html.ActionLink("Home", "Index", "Home", new {@class = "indexLink"})</h5>




