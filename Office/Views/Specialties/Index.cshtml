@{
  Layout = "_Layout";
}

@using Office.Models

<h1>Specialty List</h1>

@if (@Model.Count == 0)
{
  <h3>No Specialty have been added yet!</h3>
}

else
{
<ul>
  <h3>Click on Specialty below to see details</h3>
  @foreach (Specialty specialty in Model)
  {
    <li>@Html.ActionLink($"{specialty.Name}", "Details", new { id = specialty.SpecialtyId })</li>
  }
</ul>

<h5>@Html.ActionLink("Add Specialty", "Create", new {@class = "indexLink"})</h5>

@* <p>@Html.ActionLink("Add Doctors", "Create", "Doctors", new {@class = "indexLink"})</p> *@

<h5>@Html.ActionLink("Home", "Index", "Home", new {@class = "indexLink"})</h5>
}