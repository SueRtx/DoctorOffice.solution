@{
  Layout = "_Layout";
}

@using Office.Models;

<h1>Doctor</h1>

@if (@Model.Count == 0)
{
  <h3>No Doctor have been added yet!</h3>
} 

<ul>
  @foreach(Doctor doctor in Model)
  {
    <li>@Html.ActionLink($"{doctor.DoctorName}", "Details", new { id = doctor.DoctorId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Doctor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>