@{
  Layout = "_Layout";
}

@using Office.Models

<h1>Doctors List</h1>

@if (@Model.Count == 0)
{
  <h3>No Doctor to this Specialty</h3>
  <h5>@Html.ActionLink("Add Doctor ", "Create", "Doctors")</h5> 
} 

else
{
  <h3>Click on Doctor to this Details</h3> 
<ul>
  @foreach(Doctor doctor in Model)
  {
    @* <li>@Html.ActionLink($"{doctor.Name}", null, null,  new {@class = "myCssClass"})</li> *@

    <li>@Html.ActionLink($"{doctor.DoctorName}", "Details", new { id = doctor.DoctorId })</li>
  }
</ul>
}

<h5>@Html.ActionLink("Add Doctor ", "Create", "Doctors")</h5> 
<h5>@Html.ActionLink("Specialty List", "Index", "Specialties")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>
