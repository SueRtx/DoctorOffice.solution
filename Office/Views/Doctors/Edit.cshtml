@{
  Layout = "_Layout";
}

@model Office.Models.Doctor

<h2>Edit Doctor</h2>
<hr />
<h4>Edit: Dr. @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.DoctorId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name, new { required = "required" })
  <br />
  @Html.Label("Specialty")
  @Html.DropDownList("SpecialtyId")
  <br />
  <input type="submit" value="Save" class="pageLink" />
}

<h5 class="pageLink">@Html.ActionLink("Cancel", "Index")</h5>