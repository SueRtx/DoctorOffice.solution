@{
  Layout = "_Layout";
}

@model Office.Models.Patient

<h4>Add Patient</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.PatientName)
    @Html.TextBoxFor(model => model.PatientName, new { required = "required" })

    @Html.LabelFor(model => model.BirthDate)
    @Html.TextBoxFor(model => model.BirthDate, new { required = "required", @type = "date" })

    @Html.Label("Select Doctor")
    @Html.DropDownList("DoctorId")

    <input type="submit" value="Add new Patient" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Patients", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>